
      {% extends "layout.j2" %}
      {% block content %}
      <div id="form-container">
        <form action="/login" method="POST">
          <div class="text-box-container">
            <div class="text-box">
              <input
                type="text"
                id="username"
                name="username"
                aria-label="Username field"
                autofocus
                required
                placeholder="Type in your username: "
                autocomplete="off"
                pattern="^[A-Za-z0-9]+$"
                value="{{ search_input }}"
                spellcheck="false"
                title="English alphabets and numbers only."
              />

              {# <button class="search-btn" type="submit">
                <i class="search-icon"></i>
              </button> #}
            </div>
          </div>
          <div class="text-box-container">
            <div class="text-box">
              <input
                type="password"
                id="password"
                name="password"
                aria-label="Password field"
                autofocus
                required
                placeholder="Type in your password: "
                autocomplete="off"
                pattern="^[A-Za-z0-9!@#$%^&*]+$"
                value="{{ search_input }}"
                spellcheck="false"
                title="English alphabets and numbers only."
              />

              {# <button class="search-btn" type="submit">
                <i class="search-icon"></i>
              </button> #}
            </div>
          </div>
          <div class="random-btn-container">
        <button id="random-btn" type="submit">
          Login!
          {# <i class="solid-dice-icon"></i> #}
        </button>
      </div>
        </form>
      </div>      
    {% if current_user.is_authenticated %}
        <div id="random-btn-title" class="instruction-title">
        Welcome, {{ current_user.username }}!
      </div>
    {% endif %}
    </main>
    {% endblock content %}